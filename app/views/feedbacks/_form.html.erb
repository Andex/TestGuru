<%= form_for(:feedback, url: feedbacks_path, locale: true) do |f| %>

  <div class="field">
    <%= f.label :topic, 'Тема' %>
    <%= f.select :topic, ["General question", "Problem", "Advice", "Thanks"] %>
  </div>

  <div class="field">
    <%= f.label :message_text, 'Текст сообщения' %><br />
    <%= f.text_area :message_text, cols: 60 %>
  </div>

  <div class="actions">
    <%= f.submit 'Отправить' %>
  </div>
<% end %>
