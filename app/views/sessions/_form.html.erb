<%= form_with url: sessions_path, local: true do |form| %>
  <% if flash[:alert] %>
    <%= content_tag :p, flash[:alert], class: 'flash alert' %>
  <% end %>
  <p>
    <%= form.label :name, 'Имя' %>
    <%= form.text_field :name, id: :user_name %>
  </p>
  <p>
    <%= form.label :email, 'Электронная почта' %>
    <%= form.text_field :email, id: :user_email %>
  </p>
  <p>
    <%= form.label :password, 'Пароль' %>
    <%= form.password_field :password, id: :user_password %>
  </p>
  <p>
    <%= form.label :password_confirmation, 'Подтверждение пароля' %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p>

  <%= form.submit "#{button}" %>
<% end %>