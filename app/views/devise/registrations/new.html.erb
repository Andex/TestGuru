<h2>Стань Гуру</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="field">
    <%= f.label :email, 'Электронная почта' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %><br />
  </div>

  <div class="field">
    <%= f.label :password, 'Пароль' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: 'new-password' %><br />
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Подтверждение пароля' %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %><br />
  </div>

  <div class="actions">
    <%= f.submit 'Зарегистрироваться' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
