<h2>Войти в TestGuru</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'Электронная почта' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %><br />
  </div>

  <div class="field">
    <%= f.label :password, 'Пароль' %>
    <%= f.password_field :password, autocomplete: 'current-password' %><br />
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Запомнить меня' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Войти' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
