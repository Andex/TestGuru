<table>
  <tr>
    <th>Вопрос</th>
    <th colspan="3">Действия</th>
  </tr>
  <% questions.each do |question| %>
  <tr>
    <td><%= question.body %></td>
    <td><%= link_to 'Показать', question_path(question) %></td>
    <td><%= link_to 'Редактировать', edit_question_path(question) %></td>
    <td><%= link_to 'Удалить', question_path(question), method: :delete, data: { confirm: 'Вы уверены?'} %></td>
  </tr>
  <% end %>
</table>