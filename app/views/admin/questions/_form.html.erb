<div class="container card-body">
  <%= form_with model: [:admin, @test, @question], local: true do |form| %>
    <%= render 'shared/errors', resource: @question %>
    <div class="form-group col-md-3">
      <%= form.label :body, class: 'col-form-label' %><br>
      <%= form.text_area :body, id: :body, cols:40, class: 'form-control' %>
      <br>
      <%= form.submit class: 'btn btn-warning btn-sm' %>
    </div>
  <% end %>
  <%= link_to t('.back'), admin_test_path(@question.test_id), class: 'btn btn-dark btn-sm' %>
</div>