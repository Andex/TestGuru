<table class="table">
  <thead class="thead-light text-center">
    <tr>
      <th><%= Question.model_name.human %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <% questions.each do |question| %>
  <tr>
    <td class="text-center"><%= question.body %></td>
    <td class="text-center"><%= link_to t('.show'), admin_question_path(question), class: 'btn btn-outline-dark btn-sm' %></td>
    <td class="text-center"><%= link_to t('.edit'), edit_admin_question_path(question), class: 'btn btn-outline-success btn-sm' %></td>
    <td class="text-center"><%= link_to t('.delete'), admin_question_path(question), method: :delete,data: { confirm: 'Вы уверены?'},
                                                                                  class: 'btn btn-outline-danger btn-sm' %></td>
  </tr>
  <% end %>
</table>