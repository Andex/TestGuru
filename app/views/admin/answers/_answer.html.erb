<table class="table">
  <thead class="thead-light text-center">
    <tr>
      <th><%= Answer.model_name.human %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  <% answers.each do |answer| %>
  <tr>
    <td class="text-center"><%= answer.body %></td>
    <td class="text-center"><%= link_to t('.show'), admin_answer_path(answer), class: 'btn btn-outline-dark btn-sm' %>
      <%= link_to t('.edit'), edit_admin_answer_path(answer), class: 'btn btn-outline-success btn-sm' %>
      <%= link_to t('.delete'), admin_answer_path(answer), method: :delete, data: { confirm: 'Вы уверены?'}, class: 'btn btn-outline-danger btn-sm' %>
    </td>
  </tr>
  <% end %>
</table>