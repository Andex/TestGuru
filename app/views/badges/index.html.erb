<div class="container">
  <h1><%= t('.personal_badges') %></h1>

  <table class="table text-center">
    <thead class="thead">
    <tr>
      <th><%= Badge.human_attribute_name(:name) %></th>
      <th><%= Badge.human_attribute_name(:picture) %></th>
    </tr>
    </thead>
    <%= render 'badges/badge', badges: @user_badges %>
  </table>
  <br>

  <h1><%= t('.all_badges') %></h1>

  <table class="table text-center">
    <thead class="thead">
    <tr>
      <th><%= Badge.human_attribute_name(:name) %></th>
      <th><%= Badge.human_attribute_name(:picture) %></th>
    </tr>
    </thead>
    <%= render @badges %>
  </table>
</div>